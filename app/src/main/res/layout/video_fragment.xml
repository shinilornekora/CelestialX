<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/switchButton"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="@color/black"
        android:text="@string/go_to_photo"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/camera_switcher"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/hedgehog"
        android:elevation="10dp"
        android:contentDescription="@string/animal_desc"
        app:layout_constraintTop_toBottomOf="@id/separatorView"
        app:layout_constraintStart_toStartOf="@id/separatorView"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <View
        android:id="@+id/separatorView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintTop_toBottomOf="@id/switchButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/blank"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/separatorView"
        app:layout_constraintBottom_toTopOf="@id/video_footer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/separatorControlView"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/black"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/video_footer" />

    <include
        android:id="@+id/video_footer"
        layout="@layout/video_footer"
        android:layout_width="0dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>